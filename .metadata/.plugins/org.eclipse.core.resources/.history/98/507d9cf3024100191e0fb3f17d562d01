import numpy as np
np.random.seed(10)
A = np.random.choice(100, 10, replace = False)
def Merge(X,Y):
    result = []
    for x in range(len(X)):
        for y in range(len(Y)):
            if X[x] < Y[y]:
                x += 1
                result.append(X[x-1])               
            else:
                y += 1
                result.append(Y[y-1])
                              
            if x == len(X):
                for j in range(y, len(Y[y:])):
                    result.append(Y[y:][j])
                break
                
            if y == len(Y):
                for j in range(y, len(X[x:])):
                    result.append(X[x:][j])
                break
    return result     
def MergeSort(A):
    if len(A) == 1:
        return A
    else:
        resulta = Merge(MergeSort(A[:len(A)//2]),  MergeSort(A[len(A)//2:]))
        return resulta
     
print(A)
print(MergeSort(A))   
   
    