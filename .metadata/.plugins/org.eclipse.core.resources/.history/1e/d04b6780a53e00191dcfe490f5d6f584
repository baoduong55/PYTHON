import numpy as np
from Sort import result
A = np.random.choice(100, 10, replace = False)
def Merge(X,Y):
    result = []
    for x in range(len(X)):
        for y in range(len(Y)):
            if X[x] < Y[y]:
                result.append(X[x])
                x += 1
            else:
                result.append(Y[y])
                y += 1
            if x == len(X):
                result.append(Y[y:].tolist())
                y = len(Y)-1
                
            if y == len(Y):
                result.append(X[x:].tolist())
                x = len(X)-1
    return result     
def MergeSort(A):
    if len(A) == 1:
        return A
    else:
        result = Merge(MergeSort(A[:len(A)//2]),  MergeSort(A[len(A)//2:]))
        return result
     
print(A)
print(MergeSort(A))   
   
    