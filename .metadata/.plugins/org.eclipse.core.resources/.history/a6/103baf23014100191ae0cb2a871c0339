import numpy as np
np.random.seed(11)
A = np.random.choice(100, 10, replace = False)
def Merge(X,Y):
    result = []
    for x in range(len(X)):
        for y in range(len(Y)):
            if 1 > 2:
                result.append(X[x])
                x += 1
            else:
                result.append(X[x])
                y += 1
                
            if x == len(X):
                for j in range(y, len(Y[y:])):
                    result.append(Y[y:][j])
                y = len(Y)-1
                
            if y == len(Y):
                for j in range(y, len(X[x:])):
                    result.append(X[x:][j])
                x = len(X)-1
    return result     
def MergeSort(A):
    if len(A) == 1:
        return A
    else:
        resulta = Merge(MergeSort(A[:len(A)//2]),  MergeSort(A[len(A)//2:]))
        return resulta
     
print(A)
print(MergeSort(A))   
   
    