import numpy as np
np.random.seed(10)
A = np.random.choice(100, 10, replace = False)
def Merge(X,Y):
    result = []
    x = 0
    y = 0
    while x < len(X) && y < len(Y):
            if X[x] < Y[y]:                
                result.append(X[x])
                x += 1
                if x == len(X):
                    for j in range(y, len(Y)):
                        result.append(Y[j])
                        y = len(Y)                             
            else:
                result.append(Y[y])
                y += 1              
                if y == len(Y):
                    for j in range(x, len(X)):
                        result.append(X[j])
                        x = len(X)
    return result     
def MergeSort(A):
    if len(A) == 1:
        return A
    else:
        resulta = Merge(MergeSort(A[:len(A)//2]),  MergeSort(A[len(A)//2:]))
        return resulta
     
print(A)
print(MergeSort(A))   
   
    